{
  "name": "Code Viewer",
  "description": "Highlight source code syntax with highlight.js.",
  "version": "1.1.2",
  "applications": {
    "gecko": {
      "id": "@code-viewer",
      "strict_min_version": "53.0",
      "update_url": "https://egy186.github.io/code-viewer/updates.json"
    }
  },
  "content_scripts": [
    {
      "js": [
        "index.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "homepage_url": "https://github.com/egy186/code-viewer#readme",
  "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  },
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "resources/*"
  ]
}
