{
  "name": "code-viewer",
  "description": "Highlight source code syntax with highlight.js.",
  "version": "1.3.0",
  "author": "egy186",
  "bugs": {
    "url": "https://github.com/egy186/code-viewer/issues"
  },
  "devDependencies": {
    "@egy186/eslint-config": "^0.75.1",
    "@highlightjs/cdn-assets": "^11.5.1",
    "copyfiles": "^2.4.0",
    "eslint": "^8.17.0",
    "eslint-plugin-jsdoc": "^39.3.0",
    "eslint-plugin-node": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "web-ext": "^6.8.0"
  },
  "engines": {
    "node": ">=16.13.2"
  },
  "homepage": "https://github.com/egy186/code-viewer#readme",
  "keywords": [
    "highlight"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egy186/code-viewer.git"
  },
  "scripts": {
    "build": "web-ext build",
    "clean": "rimraf src/resources/lib web-ext-artifacts",
    "copy": "copyfiles --up 1 node_modules/@highlightjs/cdn-assets/highlight.min.js \"node_modules/@highlightjs/cdn-assets/styles/**/*\" src/resources/lib",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:manifest": "web-ext lint --self-hosted",
    "prebuild": "npm run copy",
    "prerelease": "npm run copy",
    "release": "web-ext sign --api-key $API_KEY --api-secret $API_SECRET",
    "start": "web-ext run",
    "version": "node lib/version.js && git add docs/updates.json src/manifest.json"
  }
}
